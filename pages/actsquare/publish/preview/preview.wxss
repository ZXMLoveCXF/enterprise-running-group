/* pages/actsquare/publish/preview/preview.wxss */

.bg-bor {
    width: 630rpx;
    padding: 30rpx;
    margin: 20rpx 30rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
    border-radius: 30rpx;
    overflow: hidden;
}

.bg-bor .title {
    color: #1E1E1E;
    font-weight: bold;
    display: inline-block;
}

.bg-bor .text-content {
    display: block;
    font-size: 28rpx;
    margin-top: 30rpx;
}

.complete-btn {
    width: 100%;
    height: 118rpx;
    line-height: 118rpx;
    font-size: 34rpx;
    border-radius: 0;
    position: fixed;
    bottom: 0;
    color: #fff;
    z-index: 2;
    font-weight: bold;
    opacity: .94;
}

.hr {
    width: 660rpx;
    height: 1rpx;
    background: rgba(231, 231, 231, 1);
    margin-left: -15rpx;
    margin-top: 26rpx;
}

.prize-list {
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
}

.prize-list view {
    display: flex;
}

.input-right {
    display: flex;
    flex-direction: column;
    width: 438rpx;
}

.input-bottom {
    width: 582rpx;
    padding: 30rpx 24rpx;
    border-radius: 10rpx;
    margin-bottom: 12rpx;
    line-height: 42rpx;
    background: rgba(248, 248, 248, 1);
    font-size: 28rpx;
}

.input-right view {
    width: 400rpx;
    height: 84rpx;
    line-height: 84rpx;
    padding-left: 38rpx;
    background: rgba(248, 248, 248, 1);
    border-radius: 10rpx;
    margin-bottom: 12rpx;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display:block;
}

.prize-img-box {
    width: 180rpx;
    height: 180rpx;
    background: #F8F8F8;
    border-radius: 20rpx;
    overflow: hidden;
    margin-right: 12rpx;
}

.prize-img {
    width: 180rpx;
}

.prize-img-box view {
    /* display: flex; */
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.prize-img-box view image {
    width: 54rpx;
    height: 54rpx;
    margin-bottom: 14rpx;
}

.prize-img-box text {
    color: #A9A9A9;
    font-size: 24rpx;
}

.switch-list {
    height: 160rpx;
}