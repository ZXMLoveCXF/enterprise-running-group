/* pages/actsquare/publish/pkrank/pkrank.wxss */

.next-btn {
    width: 100%;
    height: 118rpx;
    line-height: 118rpx;
    font-size: 34rpx;
    border-radius: 0;
    position: fixed;
    bottom: 0;
    color: #fff;
    z-index: 2;
    font-weight: bold;
    opacity: .94;
}

.bg-bor {
    width: 630rpx;
    padding: 30rpx;
    margin: 20rpx 30rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
    border-radius: 30rpx;
    overflow: hidden;
    margin-bottom: 160rpx;
}

.bg-bor .title {
    color: #1E1E1E;
    font-weight: bold;
    display: inline-block;
}

.hr {
    width: 660rpx;
    height: 1rpx;
    background:rgba(231,231,231,1);
    margin-left: -15rpx;
}

.checkbox {
    display: flex;
    align-items: center;
    padding: 40rpx 0;
    font-size: 32rpx;
}

.checkbox image {
    width: 42rpx;
    height: 42rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

