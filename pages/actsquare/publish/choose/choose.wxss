/* pages/actsquare/publish/choose/choose.wxss */

.list-content {
    width: 660rpx;
    margin-left: 30rpx;
    min-height: 84vh;
    background: #fff;
    box-shadow: 0 3rpx 14rpx 0 #ccc;
    border-radius: 30rpx;
    padding-left: 30rpx;
    margin-top: 16rpx;
}

.list {
    padding: 40rpx 0;
    border-bottom: 1rpx solid rgba(241, 241, 241, 1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.list .title-img {
    width: 118rpx;
    height: 118rpx;
    border-radius: 16rpx;
    margin-right: 24rpx;
}

.title {
    font-size: 38rpx;
    color: #040000;
    font-weight: 800;
    margin-bottom: 12rpx;
}
.list-right{
    flex: 1;
}
.list-right text{
    color: #040000;
    overflow: hidden;
    width: 422rpx;
    height: 74rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 28rpx;
    line-height: 32rpx;
}
.right{
    width: 12rpx;
    height: 20rpx;
    margin-right: 30rpx;
}
.tip-text{
    font-size: 26rpx;
    text-align: center;
    color: #C1C1C1;
    margin-top: 70rpx;
    display: block;
    margin-bottom: 70rpx;
}