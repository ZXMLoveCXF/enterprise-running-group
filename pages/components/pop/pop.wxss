/* pages/components/pop.wxss */

.popup {
  position: fixed;
  width: 100%;
  /* height: 100%; */
  /* top: 50%; */
  left: 50%;
  transform: translateX(-50%);
  /* transform: translate(-50%, -50%); */
  display: flex;
  overflow: hidden;
}

.popup.hide {
  display: none;
}

.popup.show {
  display: flex;
}

.popup.fadeOut {
  display: flex;
  transition: all 300ms linear;
}

.popup.fadeOut.animotion-center {
  width: 0;
  height: 0;
}

.popup.fadeOut.animotion-top {
  top: -100% !important;
}

.popup.fadeOut.animotion-bottom {
  transform: translate(-50%, 50%);
}

.popup.fadeOut.animotion-left {
  left: -100%;
}

.popup.fadeOut.animotion-right {
  transform: translate(50%, -50%);
}

.popup.fadeIn {
  display: flex;
  transition: all 300ms linear;
}

.popup.fadeIn.animotion-center {
  width: 0;
  height: 0;
}

.popup.fadeIn.animotion-top {
  top: -100%;
}

.popup.fadeIn.animotion-bottom {
  transform: translate(-50%, 50%);
}

.popup.fadeIn.animotion-left {
  left: -100%;
}

.popup.fadeIn.animotion-right {
  transform: translate(50%, -50%);
}

.popup.center {
  align-items: center;
  justify-content: center;
}

.popup.top {
  align-items: flex-start;
  justify-content: center;
}

.popup.bottom {
  align-items: flex-end;
  justify-content: center;
}

.popup.left {
  align-items: center;
  justify-content: flex-start;
}

.popup.right {
  align-items: center;
  justify-content: flex-end;
}