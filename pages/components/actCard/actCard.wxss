/* pages/components/actCard/actCard.wxss */

.card-content {
    position: relative;
    width: 630rpx;
    height: 298rpx;
    margin: 0 auto 20rpx;
    border-radius: 30rpx;
    overflow: hidden;
    padding: 30rpx;
    /* background: rgb(131, 6, 6); */
}

.card-content>image {
    position: absolute;
    top: 0;
    left: 0;
    width: 690rpx;
    height: 358rpx;
    z-index: 0;
}
.bg-mask{
    position: absolute;
    top: 0;
    left: 0;
    width: 690rpx;
    height: 358rpx;
    background: #000;
    opacity: .4;
    z-index: 1;
}

.title {
    position: relative;
    z-index: 2;
    font-size: 38rpx;
    color: #fff;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-weight: 800;
}

.num {
    position: relative;
    z-index: 2;
    margin-top: 12rpx;
    font-size: 23rpx;
    color: #fff;
}
.bottom{
    position: absolute;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 630rpx;
    align-items: center;
    bottom: 30rpx;
    z-index: 2;
}

.tip {
    height: 50rpx;
    border-radius: 12rpx;
    line-height: 50rpx;
    vertical-align: -webkit-baseline-middle;
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    padding: 0 14rpx;
    font-weight: 800;
    display: flex;
    justify-content: center;
    align-items: center;
}
.tip image{
    width: 20rpx;
    height: 22rpx;
    margin-right: 8rpx;
}
.time{
    color: #fff;
    font-size: 26rpx;
    display: flex;
    align-items: center;
}
.time text{
    margin-left: 8rpx;
}
.time image{
    width: 24rpx;
    height: 24rpx;
}