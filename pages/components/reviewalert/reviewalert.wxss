/* pages/components/reviewalert/reviewalert.wxss */
.alertBox{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.2);
  z-index: 2000;
}

.alertBox .box{
  width: 600rpx;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  height: 326rpx;
  position: relative;
  padding-top: 10rpx;
}

.alertBox .box .reason{
  margin: 30rpx 70rpx 0;
  border: 2rpx #e0e0e0 solid;
  color: #c1c1c1;
  text-align: center;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 35rpx;
  font-size: 26rpx;
}


.alertBox .box .bottom{
  position: absolute;
  display: flex;
  bottom: 0;
  height: 80rpx;
  border-top: 1rpx #e0e0e0 solid;
}

.bottom .left {
  width: 300rpx;
  text-align: center;
  line-height: 80rpx;
  color: #c1c1c1;
  border-right: 1rpx #e0e0e0 solid;
}

.bottom .right {
  width: 300rpx;
  text-align: center;
  line-height: 80rpx;
}
