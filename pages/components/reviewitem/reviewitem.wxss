/* pages/components/reviewitem/reviewitem.wxss */

.contentinfo {
  display: flex;
  height: 100rpx;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.content-left {
  left: 30rpx;
  top: 20rpx;
  height: 120rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}

.content-left view{
  display: flex;
  align-items: center;
}

.content-left view image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.content-right {
  right: 30rpx;
  top: 0;
  height: 160rpx;
  display: flex;
  align-items: center;
  position: absolute
}

.state {
  padding-left: 16rpx;
  color: #A9A9A9;
}

.arrow {
  width: 12rpx;
  height: 21rpx;
  margin-left: 20rpx;
}

.normalLine{
  width: 100%;
  height: 2rpx;
  background:  #f1f1f1
}
