  width: 100%;
} */

.mini-item .detail .title {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 15rpx;
  width: 100%;
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  word-wrap: break-word;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.mini-item .detail .num {
  font-size: 30rpx;
}

.mini-item .detail .num image {
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
  margin-right: 5rpx;
  position: relative;
  top: -4rpx;
}
