/* pages/components/loading.wxss */

.content {
  margin: 0 10rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.04);
  padding-bottom: 60rpx;
  height: 810rpx;
  background-color: #fff;
}

.content .head {
  height: 240rpx;
  position: relative;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  overflow:hidden;
}

.content .head .mask {
  height: 240rpx;
  width: 100%;
  position: absolute;
  top: 0;
  z-index: 1995;
  background-color: rgba(0, 0, 0, 0.6);
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
}

.blur {
  -webkit-filter: blur(5rpx);
  -moz-filter: blur(5rpx);
  -ms-filter: blur(5rpx);
  filter: blur(5rpx);
}

.content .head .bgImg {
  height: 240rpx;
  width: 100%;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
}

.content .body {
  margin: 0 30rpx;
  box-sizing: border-box;
}

.content .body .totleNum {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  margin-bottom: 33rpx;
  position: relative;
  vertical-align: bottom;
}

.content .body .totleNum .title {
  font-weight: bold;
  position: relative;
}

.content .body .totleNum .title image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 13rpx;
  /* margin-bottom: 4rpx; */
}

.content .body .totleNum .title text {
  position: absolute;
  bottom: 8rpx;
  width: 150rpx;
}

.content .body .totleNum .num {
  font-family: "DIN Engschrift Std";
  font-size: 36rpx;
}

.content .body .totleNum .num text {
  font-family: "DIN Engschrift Std";
  font-size: 26rpx;
}

.content .body .detail {
  display: flex;
  justify-content: space-between;
  text-align: center;
  position: relative;
}

.content .body .detail .verticalLine {
  height: 50rpx;
  background-color: #e6e6e6;
  width: 2rpx;
  position: absolute;
  left: 33.33%;
  top: 50%;
  transform: translateY(-50%);
}

.content .body .detail .run, .content .body .detail .punch,
.content .body .detail .speed {
  width: 33.33%;
  padding: 30rpx 0;
  box-sizing: border-box;
}

.content .body .detail .run {
  background-image: -webkit-linear-gradient(0deg, #fff, #f9f9f9);
}

.content .body .detail .punch {
  background-color: #f9f9f9;
}

.content .body .detail .speed {
  background-image: -webkit-linear-gradient(0deg, #f9f9f9, #fff);
}

.content .body .detail .label {
  color: #a9a9a9;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.content .body .notice {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0 26rpx 0;
  position: relative;
}

.content .body .noticeDetail {
  color: #1e1e1e;
  font-size: 28rpx;
  /* height: 150rpx; */
  width: 100%;
  word-wrap: break-word;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.content .body .notice .title {
  line-height: 30rpx;
  font-weight: bold;
}

.content .body .notice .title image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 13rpx;
}

.content .body .notice .num {
  font-size: 24rpx;
  line-height: 30rpx;
  color: #a9a9a9;
}

.mini-item {
  width: 100%;
  height:140rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  color: #fff;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  padding: 0 30rpx;
  z-index: 19950104;
}

.mini-item .face {
  width: 140rpx;
}

.mini-item .face image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 30rpx;
  border: 1rpx solid #fff;
  box-sizing: border-box;
}

.mini-item .detail {
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  padding: 10rpx 0;
  position: relative;
  box-sizing: border-box;
  margin-left: 20rpx;
}

