/* pages/components/actitem/actitem.wxss */
.cell-container {
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-top: 30rpx;
  height: 450rpx;
  position: relative;
}

.cell-image {
  top: 0;
  left: 0;
  width: 100%;
  height: 345rpx;
  border-radius: 30rpx;
}

.editview {
  position: absolute;
  width: 240rpx;
  color: white;
  top: 144rpx;
  height: 82rpx;
  line-height: 82rpx;
  font-size: 34rpx;
  left: 225rpx;
  text-align: center;
  border-radius: 41rpx;
  background: rgba(0, 0, 0, 0.7)
}

.cell-title {
  font-size: 30rpx;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  position: absolute;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  padding: 20rpx;
  bottom: 130rpx;
  left: 0;
  right: 0;
}

.cell-title view{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}

.cell-top {
  display: flex;
  height: 50rpx;
  right: 0;
  flex-direction: row;
  align-items: center;
  color: #1e1e1e;
  /* padding-left: 20rpx;
  padding-right: 20rpx; */
  font-size: 28rpx;
  justify-content: space-between;
}

.cell-bottom {
  display: flex;
  font-size: 26rpx;
  /* justify-content: space-between; */
  align-items: center;
}

.bottom-left {
  flex: 1;
  display: flex;
  /* justify-content: flex-end; */
  align-items: center;
  color: #1e1e1e;
}

.bottom-right {
  display: flex;
  align-items: center;
  color: #1e1e1e;
}

.bottom-left image {
  width: 24rpx;
  height: 24rpx;
  padding-right: 10rpx;
}

.bottom-right image {
  width: 27rpx;
  height: 24rpx;
  margin: 0 10rpx;
}

.bottom-top image {
  width: 24rpx;
  height: 24rpx;
}

.lightColorLine {
  height: 10rpx;
  background-color: #f6f7ff;
  width: 100%;
}

.cell-container text {
  position: absolute;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: white;
  top: 30rpx;
  line-height: 48rpx;
  font-size: 26rpx;
  right: 0;
  text-align: center;
  border-bottom-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.cell-container text.in {
  background-color: #F7C20B;
}

.cell-container text.del {
  background-color: #a3a3a3;
}
