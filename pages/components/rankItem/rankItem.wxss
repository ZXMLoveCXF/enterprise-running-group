/* pages/components/loading.wxss */
.rank-item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}
.rank-item.me{
  background-color: #f5f5f5
}
.rank-item .rankNum{
  width: 100rpx;
  line-height: 80rpx;
  text-align: center;
  font-weight: bold;
}
.rank-item .rankNum image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.rank-item .face {
  flex: 1;
  display: flex;
}

.rank-item .face text{
  line-height: 80rpx;
  margin-left: 20rpx;
}

.rank-item .face image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  box-sizing: border-box
}
.rank-item .face image.male {
  border: 4rpx solid #3851d0;
}
.rank-item .face image.female {
  border: 4rpx solid #e67373;
}
.rank-item .data {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: right
}

.content .lightLine {
  background-color: #f1f1f1;
  height: 1rpx;
  width: 690rpx;
  box-sizing: border-box;
  margin: 0 auto
}
.content .lightLine.detail{
  width: 630rpx;
}

.small{
  color: #a9a9a9;
  font-size: 26rpx
}