/* pages/certification/certification.wxss */
.opacity{
    opacity: .7;
}
.welcome {
    margin: 60rpx;
    box-sizing: border-box;
}

.welcome .hi,
.welcome .name {
    font-size: 60rpx;
    font-weight: bold;
}

.welcome .sentence {
    font-size: 40rpx;
    font-weight: bold;
    margin-top: 30rpx;
}

.welcome .inputs {
    margin-top: 60rpx;
}

.welcome .inputs .tel {
    border-bottom: 1rpx solid #e6e6e6;
    height: 80rpx;
}

.welcome .code {
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}

.welcome .code .input {
    flex: 1;
}

.welcome .code .input input{
    border-bottom: 1rpx solid #e6e6e6;
    height: 80rpx;
}
.welcome .code .btn{
    position: relative;
    width: 200rpx;
    margin-left: 20rpx
}
.welcome .code .btn button{
    text-align: center;
    background-color: #ffffff;
    font-size: 26rpx;
    line-height: 70rpx;
    border-radius: 0;
    width: 200rpx;
    position: absolute;
    bottom: 0
}
.welcome .certification{
    margin-top: 30rpx;
    text-align: center;
    font-size: 30rpx;
    line-height: 100rpx;
    border-radius: 90rpx;
    color: #ffffff
}


.welcome .notice {
    display: flex;
    margin-top: 20rpx;
}

.welcome .notice .icon {
    position: relative;
    top: 2rpx;
}

.welcome .notice .icon icon {
    position: relative;
}

.welcome .notice .errorText {
    margin-left: 10rpx;
    color: #c22525;
    font-size: 26rpx;
}
.company{
    position: fixed;
    bottom: 60rpx;
    text-align: center;
    width: 100%
}
.company image{
    width: 100rpx;
}
.company .name{
    font-weight: bold;
    margin-top: 20rpx;
}
.jump{
    border: 1rpx solid #fff;
    color: #fff;
    padding: 5rpx 10rpx;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    z-index: 1995;
}
.bgImg{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}