.tel-btn{
  width: 160rpx;
  padding: 0rpx 20rpx 0 20rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 32rpx;
}

.tel-bind{
  color: white;
  border-radius: 49rpx;
  margin-top: 80rpx;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  font-weight: bold;
}

.tel-bind::after{
  border: 0
}
.tel-bind .name{
  padding: 0;
  font-size: 30rpx;
}
.tel-bind .num{
  padding: 0;
  color: #ffd74f;
  font-size: 22rpx;
}

.download321 {
  border-radius: 49rpx;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 28rpx;
  background-color: white;
}

