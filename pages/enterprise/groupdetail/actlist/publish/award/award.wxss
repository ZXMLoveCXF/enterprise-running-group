/* pages/enterprise/groupdetail/actlist/publish/award/award.wxss */
.award-container {
  position: relative;
  left: 0;
  right: 0;
  top: 0;
  padding-bottom: 118rpx;
  width: 750rpx;
  background: white;
}

.awards {
  margin: 105rpx 30rpx 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.styles {
  margin: 0rpx 30rpx 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  position: relative;
}


.tip {
  top: 0;
  right: 0;
  left: 0;
  height: 70rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 28rpx;
  padding-left: 26rpx;
  line-height: 68rpx;
}

/* .ab-position {
